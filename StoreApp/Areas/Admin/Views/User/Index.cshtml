@model IEnumerable<IdentityUser>
@{
}
<div class="text-center">
	<h6 class="display-6">Users</h6>
</div>

<div class="d-flex justify-content-end">
	<a asp-action="Create" class="btn btn-outline-success">
		<i class="fa fa-solid fa-plus"></i>
		Add user
	</a>
</div>


<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>UserName</th>
			<th>Roles</th>
			<th>Operations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (IdentityUser user in Model)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.UserName</td>
				<td user-name="@user.UserName" user-role=""></td> <!--UserRoleTagHelper-->
				<td>
					<div class="btn-group">
						<a class="btn btn-warning rounded-0" asp-action="Update" asp-route-id="@user.UserName">
							<i class="fa fa-solid fa-edit"></i>
							Edit</a>
						<a class="btn btn-info rounded-0" asp-action="ResetPassword" asp-route-id="@user.UserName">
							<i class="fa-solid fa-key"></i>
							Reset Password</a>
						<form method="post" asp-action="DeleteOneUser">
							<input type="hidden" name="UserName" value="@user.UserName" />
							<!-- Buttona basıldığında UserName' i ilgili nesneye taşıyacak-->
							<button type="submit" class="btn btn-danger rounded-0">
								<i class="fa fa-solid fa-trash"></i>
								Delete</button>
						</form>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>