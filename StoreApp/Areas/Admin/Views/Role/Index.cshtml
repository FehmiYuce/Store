<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Normalized Name</th>
			<th>Operations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td>@role.NormalizedName</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-sm btn-primary">See Members</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>