@model IEnumerable<IdentityRole> 
@{
}

<div class="text-center">
	<h6 class="display-6">Roles</h6>
</div>

@*<ul class="list-group">
	@foreach (var role in Model)
	{
		<li class="list-group-item">@role.Name</li>
