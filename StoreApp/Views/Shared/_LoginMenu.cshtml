
@{
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    // kullanıcı kayıt olduysa ve admin rolündeyse layouttaki admin butonunu görsün
    <li class="nav-item">
        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
            <i class="fa-solid fa-gear"></i>
            Admin</a>
    </li>
}


@if(User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Account" asp-action="Logout" 
        asp-route-returnUrl="@Context.Request.PathAndQuery()">
            <i class="fa-solid fa-right-from-bracket"></i>
        Logout</a>
        <!--hangi sayfada logout olduysak o sayfaya dönmemize yarar-->
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" aria-current="page" asp-area="" asp-controller="Account" asp-action="Login" 
        asp-route-returnUrl="@Context.Request.PathAndQuery()">
            <i class="fa-solid fa-right-to-bracket"></i>
        Login</a>
        <!--hangi sayfada login olduysak o sayfaya dönmemize yarar-->
    </li>
}


