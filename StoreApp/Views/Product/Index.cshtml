@model ProductListViewModel

<div class="row">
	<div class="col-md-3">
		@await Component.InvokeAsync("CategoriesMenu")
		@await Component.InvokeAsync("ProductFilterMenu") <!-- ViewComponent ile yapıldı-->
		<div products="" number="3"></div>  <!-- TagHelper ile yapıldı-->
	</div>
	<!--sayfayı solda kategoriler sağda ürünler olacak şekilde ayırır-->
	<div class="col-md-9">
		
		@*<div class="text-center my-3">
			<h6 class="display-6">
				Products
			</h6>
		</div>*@

		<div class="row my-3">

			@foreach (Product product in Model.Products)
			{
				<partial name="_ProductPartial" model="@product" />
			}

		</div>
		<div class="text-center">
			<div page-model="@Model?.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn"
				 page-class-normal="btn-outline-dark" page-class-selected="btn-secondary" class="btn-group">
			</div>
		</div>
	</div>
</div>




	
		
	
	
	
